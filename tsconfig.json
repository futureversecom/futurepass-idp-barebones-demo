{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "paths": {
      "openURL": ["src/shared/open-url.browser.ts"],
      "shared": ["src/shared"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "tmp"]
}
